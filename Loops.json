 
 // For loop in array

var numbers = [ 10, 20, 30, 40, 50] 
for (var i=0; i < numbers.length; i++) {
   console.log(numbers[i])
}
‍
// For loop in DOM elements

var elements = document.querySelectorAll("a");
for (var i=0; i<elements.length; i++) {
   elements[i].style.color = "red";
}

// For In Loop : the For In Loop is essentially a simplified version of the For Loop.

var person = {
    fname: "Nick",
    lname: "Jonas",
    age: 26
 }; 
 for (let x in person) {
    console.log(x + ": "+ person[x])
 }



// while : A While Loop also doesn’t have a counter and only runs if the specified condition is true.

var infiniteValue = true;
while (infiniteValue) {
   console.log("Infinite")
}
‍
// dowhile :The do-while loop always executes the block of code least once before it check specified condition.

<script>
 
let count = 0;
do {
    count++;
    document.write(count + "<br>")
} while (count < 10);
 
</script>

// ForEach() Loop : This method is used for looping through an array element

var names = ["jerry", "tom", "pluto", "micky", "mini"];
names.forEach(function1);
function function1(currentValue, index) {
   console.log("Index in array is: "+index + " ::  Value is: "+currentValue);
}


// JSON

var json = {
    one: [11, 12, 13, 14, 15],
    two: [21, 22, 23],
    three: [31, 32]
 }
 };
 for(var key in json.jsonData) {
    for (var key1 in json.jsonData[key]) {
        console.log(json.jsonData[key][key1])
    }
 }
